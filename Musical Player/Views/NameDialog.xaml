<Window x:Class="Musical_Player.Views.NameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musical_Player.Views"
        mc:Ignorable="d"
        Title="Digital audio player" Height="123" Width="350" Closing="Window_Closing">
    <Grid>
        <!-- Поле ввода названия плейлиста -->
        <TextBox x:Name="InputTextbox" HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" FontFamily="DejaVu Sans" TextChanged="InputTextbox_TextChanged"/>

        <!-- Кнопка подтверждения -->
        <Button x:Name="OK" Content="Подтвердить" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" Width="250" Click="OK_Click" FontFamily="DejaVu Sans"/>

        <!-- Метка с инструкцией -->
        <Label Content="Введите название плейлиста" HorizontalAlignment="Left" Margin="4,10,0,0" VerticalAlignment="Top" FontFamily="DejaVu Sans"/>
    </Grid>
</Window>
